<% provide :title, "Profile" %>

<h2>Edit <%= resource_name.to_s.humanize %></h2>

<% if current_user && current_user.has_gold_credit? %>
  <%= link_to "Activate Gold Status!", 
    gold_activation_path, { class: "activate_gold_status" } %>
<% end %>

<%= form_for @user do |f| %>
  <div class="field">
    <%= image_tag @user.profile_picture.url(:medium) %>
    <%= f.label :profile_picture %><br>
    <%= f.file_field :profile_picture %>
  </div>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "save_user" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
