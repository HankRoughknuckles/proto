<% unless current_user.nil? %>
  <% if user_signed_in? %>
    <div>
      <%= form_for [@idea, @comment] do |f| %>
        <%= f.label :body, "Leave a comment" %>
        <%= f.text_area :body, placeholder: "Whaddya think?"  %>
        <%= f.submit "Submit", class: "submit_comment" %>
      <% end %>
    </div>
  <% end %>
<% end %>
